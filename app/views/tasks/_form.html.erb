<%= form_with model: [category, task], local: true do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <br>
    <%= f.label :deadline %>
    <%= f.datetime_field :deadline %>
    <br>
    <%= f.submit method + " Task" %>
<% end %>