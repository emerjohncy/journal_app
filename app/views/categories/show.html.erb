<div class="container-fluid vh-100 div-content">
    <div class="title">
        <%= @category.name %>
    </div>

    <%= link_to 'Edit', edit_category_path(@category.id) %>
    <%= link_to 'Delete', category_path(@category), data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
    
    <%= link_to category_tasks_path(@category.id), class: "add-cat-link fs-3" do %>
        <div class="div-add-category">
            Show Tasks
        </div>
    <% end %>
</div>