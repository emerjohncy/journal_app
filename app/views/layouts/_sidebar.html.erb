<nav class="nav d-flex flex-column align-self-stretch">
    <p>
        Task Manager
    </p>
    <div class="d-grid">
        <%= link_to "Home", categories_path %>
        <a class="btn btn-outline-primary" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
            Categories
        </a>
    </div>

        <div class="collapse" id="collapseExample">
            <div>
                <% @categories.each do |category| %>
                    <%= render "categories/category", category: category %>
                <% end %>
            </div>
        </div>

        <% if current_page?(controller: 'categories', action: 'new') %>
            <%= form_with model: @category, local: true do |f| %>
                <%= f.text_field :name %>

                <%= f.submit "Add" %>
            <% end %>
        <% end %>

    <div>
        <%= link_to 'Add New Category', new_category_path %>
    </div>
<nav>