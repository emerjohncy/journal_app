<div class="container-fluid vh-100 d-flex justify-content-center align-items-center user">
  <div class="form-user px-5 pt-5 pb-3">
    <%= image_tag "logo.png", class: "w-100 pb-4" %>
    <p class="fs-2 fw-bold text-center mb-0">Sign up now!</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
      <%#= render "devise/shared/error_messages", resource: resource %>

      <div class="field mb-3">
        <%= f.label :email, class: "form-label" %>
        <% if resource.errors.full_messages_for(:email).count != 0 %>
          <%= f.email_field :email, autofocus: true, class: "form-control is-invalid", placeholder: "name@example.com" %>
            <% resource.errors.full_messages_for(:email).each do |message| %>
              <div class="user-error fs-8"><%= message %></div>
            <% end %>
        <% else %>
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "name@example.com" %>
        <% end %>
      </div>

      <div class="field mb-3">
        <%= f.label :password, "Password", class: "form-label" %>
        <% if resource.errors.full_messages_for(:password).count != 0 %>
          <%= f.password_field :password, class: "form-control is-invalid", placeholder: "Password (#{@minimum_password_length} characters minimum)" %>
          <% resource.errors.full_messages_for(:password).each do |message| %>
            <div class="user-error fs-8"><%= message %></div>
          <% end %>
        <% else %>
          <%= f.password_field :password, class: "form-control", placeholder: "Password (#{@minimum_password_length} characters minimum)" %>
        <% end %>
      </div>

      <div class="field mb-3">
        <%= f.label :password_confirmation, class: "form-label" %>
        <% if resource.errors.full_messages_for(:password_confirmation).count != 0 %>
          <%= f.password_field :password_confirmation, class: "form-control is-invalid" %>
          <% resource.errors.full_messages_for(:password_confirmation).each do |message| %>
            <div class="user-error fs-8"><%= message %></div>
          <% end %>
        <% else %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
        <% end %>
      </div>

      <div class="actions w-100 d-flex justify-content-center">
        <%= f.submit "Sign up", class: "user-button py-3" %>
      </div>
    <% end %>

    <div class="w-100 d-flex justify-content-center pt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>